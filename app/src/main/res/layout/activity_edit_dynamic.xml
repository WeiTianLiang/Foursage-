<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wtl.foursage20.Activity.EditDynamicActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#4FE8E8">

        <ImageView
            android:id="@+id/edit_dynamic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/editback2"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑动态"
            android:textSize="22sp"
            android:layout_weight="6"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/edit_dynamic_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_dynamic_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/edit_dynamic"
            android:hint="说出你的故事，传播你的快乐~"
            android:gravity="top"
            android:padding="6dp"/>

        <LinearLayout
            android:id="@+id/edit_dynamic_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_dynamic_pic"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/picture" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#5c5c5c"/>

</LinearLayout>
